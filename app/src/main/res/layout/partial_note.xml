<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="5pt" android:layout_margin="5pt"
              android:background="@android:color/white">

    <TextView
            android:text="title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtTitle" android:layout_marginTop="3pt"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtContent" android:text="content"
            android:layout_marginTop="3pt"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="3pt">
        <Button
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnDelete" android:layout_weight="1"/>
        <Button
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnEdit" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>